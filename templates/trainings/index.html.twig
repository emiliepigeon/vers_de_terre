{% extends 'base.html.twig' %}

{% block title %}Formations WWF{% endblock %}

{% block body %}
<section class="trainings container-fluid m-0 p-0" id="trainings">
    <div class="m-0 p-0 pb-5">
        <div class="row m-0 p-0">
            <div class="title">
                <h2 class="title-section text-center pt-3">
                    WWF Formations
                </h2>
            </div>
            <div class="subtitle">
                <h3 class="subtitle-section text-center">
                    Apprendre à préserver le ver de terre pour que notre terre s'enrichisse.
                </h3>
            </div>
            <div class="mx-0 px-0 z-3 position-relative">
                <img src="{{ asset('assets/svg/separator2.svg') }}" class="separator2-2 img-fluid z-2" alt="separation en vague entre les sections">
            </div>
        </div>
        <div class="container z-3 px-5">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 justify-content-center">
                {% for article in articles %}
                    <div class="col mb-4" style="max-width: 350px;">
                        <div class="card h-100">
                            {% if article.imageName %}
                                <img src="{{ asset('uploads/images/articles/' ~ article.imageName) }}" class="card-img-top" alt="{{ article.title|raw }}">
                            {% else %}
                                <img src="{{ asset('assets/images/default-article-image.jpg') }}" class="card-img-top" alt="{{ article.title|raw }}">
                            {% endif %}
                            <div class="card-body d-flex flex-column">
                                <h5 class="category-title text-uppercase text-center">{{ article.category.title|raw }}</h5>                                <h5 class="card-title text-center px-3">
                                    {{ article.title|raw }}
                                </h5>
                                <p class="card-text flex-grow-1 text-start">
                                    {{ article.texte|slice(0, 200)|raw ~ '...' }}
                                </p>
                                <a href="{{ path('app_article_show', {'slug': article.slug}) }}" class="btn-suite mt-auto">
                                    <h6 class="text-center pt-2">
                                        En savoir plus...
                                    </h6>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="text-center py-4">
            <a href="{{ path('app_home') }}" class="btn btn-primary btn-custom btn-lb rounded-5 text-uppercase">
                <h5 class="fw-bold mb-0">
                    Retour à l'accueil
                </h5>
            </a>
        </div>
    </div>
</section>
{% endblock %}
