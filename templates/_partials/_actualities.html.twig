<section class="container m-0 p-0 py-5" id="actualities">
    <div class="m-0 p-0">
        <div class="row m-0 p-0">
            <div class="mx-0 px-0 z-2 position-relative">
                <img src="{{ asset('assets/svg/separator-section2.svg')}}" class="separator2 img-fluid" 
                    alt="separation en vague entre les sections" width="" height="">
            </div>
            <div>
                <div class="title">
                    <h2 class="title-section text-center">
                        WWF Actualités
                    </h2>
                </div>
                <div class="subtitle">
                    <h3 class="subtitle-section text-center">
                        Le ver de terre indicateur de la bonne santé de notre environnement.
                    </h3>
                </div>
            </div>
        </div>
        <div class="container text-center px-5">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
                {% for article in articles %}
                    <div class="col mb-4">
                        <article class="card h-100">
                            <img src="{{ asset(article.imageFeatured) }}" class="card-img-top" 
                                alt="{{ article.title }}" width="" height="">
                            <div class="card-body d-flex flex-column">
                                <h5 class="category-title text-uppercase">{{ article.category.title }}</h5>
                                <h5 class="card-title">
                                    {{ article.title }}
                                </h5>
                                <p class="card-text flex-grow-1">
                                    {{ article.texte|slice(0, 150) ~ '...' }}
                                </p>
                                <a href="{{ path('app_article_show', {'slug': article.slug}) }}" class="btn-suite mt-auto">
                                    <h6 class="text-center pt-2">
                                        Lire la suite...
                                    </h6>
                                </a>
                            </div>
                        </article>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="text-center py-2">
            <a href="{{ path('app_actualities') }}" class="btn btn-primary btn-custom btn-ligthb rounded-5 text-uppercase">
                <h5 class="fw-bold">
                    Toutes les actualités
                </h5>
            </a>
        </div>
    </div>
</section>
