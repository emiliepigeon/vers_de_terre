<section class="container-fluid m-0 p-0" id="trainings">
    <div class="m-0 p-0">
        <div class="row m-0 p-0">
            <div class="title">
                <h2 class="title-section text-center pt-5">
                    WWF Formations
                </h2>
            </div>
            <div class="subtitle">
                <h3 class="subtitle-section text-center py-2">
                    Apprendre à préserver le ver de terre pour que notre terre s'enrichisse.
                </h3>
            </div>
        </div>
        <div class="container text-center px-5">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
                {% for article in articles %}
                    <div class="col mb-4">
                        <div class="card h-100">
                            <img src="{{ asset(article.imageFeatured) }}" class="card-img-top" 
                                alt="{{ article.title }}" width="" height="">
                            <div class="card-body d-flex flex-column">
                                <h5 class="category-title text-uppercase">{{ article.category.title }}</h5>
                                <h5 class="card-title text-center px-3">
                                    {{ article.title }}
                                </h5>
                                <a href="{{ path('app_article_show', {'slug': article.slug}) }}" class="btn-suite mt-auto">
                                    <h6 class="text-center pt-2">
                                        En savoir plus...
                                    </h6>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="text-center pb-5">
            <a href="{{ path('app_trainings') }}" class="btn btn-primary btn-custom btn-ligthb rounded-5 text-uppercase">
                <h5 class="fw-bold">
                    Toutes les formations
                </h5>
            </a>
        </div>
    </div>
</section>
