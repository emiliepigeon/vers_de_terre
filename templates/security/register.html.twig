{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <form method="post" id="register-form">
        {% if error is defined and error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="container-fluid m-0 p-0">
            <div class="row d-flex justify-content-center">
                <div class="title">
                    <h2 class="title-section text-center my-5">Inscription</h2>
                </div>
                <div class="col-12 col-md-6 col-lg-4">
                    {{ form_start(registrationForm) }}
                        <div class="form-group">
                            {{ form_label(registrationForm.email, 'Email', {'label_attr': {'hidden': true}}) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control form-control-sm my-3', 'placeholder': 'Votre email'}}) }}
                        </div>

                        <div class="form-group mt-3">
                            {{ form_label(registrationForm.password.first, 'Mot de passe', {'label_attr': {'hidden': true}}) }}
                            {{ form_widget(registrationForm.password.first, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Votre mot de passe'}}) }}
                        </div>

                        <div class="form-group mt-3">
                            {{ form_label(registrationForm.password.second, 'Confirmer le mot de passe', {'label_attr': {'hidden': true}}) }}
                            {{ form_widget(registrationForm.password.second, {'attr': {'class': 'form-control form-control-sm', 'placeholder': 'Confirmer votre mot de passe'}}) }}
                        </div>

                        <div class="form-group mt-3 text-center">
                            <button class="btn btn-primary btn-custom btn-orange rounded-5 text-uppercase mt-4 fw-bold" type="submit">
                                S'inscrire
                            </button>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </form>
    <div class="mx-0 px-0 z-3 position-relative">
        <img src="{{ asset('assets/svg/separator2.svg')}}" class="separator2-2 img-fluid z-2" 
            alt="separation en vague entre les sections">
    </div>
    <p class="text-center mt-3">
        <a href="{{ path('app_login') }}">Déjà inscrit ? Connectez-vous ici.</a>
    </p>
{% endblock %}
