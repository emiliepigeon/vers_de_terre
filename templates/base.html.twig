<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Word Worm Foundation!{% endblock %}
		</title>
		<meta name="description" content="World Worm Foundation">
		<meta name="keywords" content="World Worm Foundation, vers de terre sauvegarde">
		<meta name="author" content="Comme l'Oiseau">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="robots" content="index, follow">
		
		{# Content Security Policy #}
		<meta http-equiv="Content-Security-Policy" content="
			default-src 'self';
			script-src 'self' https://code.jquery.com https://cdn.jsdelivr.net https://www.google-analytics.com 'unsafe-inline';
			style-src 'self' https://cdn.jsdelivr.net https://fonts.googleapis.com 'unsafe-inline';
			font-src 'self' https://fonts.gstatic.com;
			img-src 'self' data: https://www.google-analytics.com;
			connect-src 'self' https://www.google-analytics.com;
			frame-src 'self';
			object-src 'none';
			base-uri 'self';
			form-action 'self';
			frame-ancestors 'none';
			upgrade-insecure-requests;
		">
		
		<!-- favicon browser nav head -->
		<link href="{{ asset('assets/images/icon.png') }}" rel="icon" type="image/gif" sizes="16x16" alt="icon logo world worm foundation">
		
		{# Bootstrap 5.3 CSS #}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
		
		{% block stylesheets %}
			{# Votre fichier CSS personnalisé #}
			<link rel="stylesheet" href="{{ asset('assets/css/earthworm.css', null, false, {version: 'v1'}) }}" type="text/css">
			{# Google Fonts #}
			<link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Permanent+Marker&family=Red+Hat+Display:wght@300;400;700&display=swap" rel="stylesheet">
		{% endblock %}
	</head>
	<body>
		<!--HEADER -->
		{% include '_partials/_header.html.twig' %}
				
		<!--BODY -->
		{% block body %}{% endblock %}
		
		{% include '_partials/_newsletter.html.twig' %}
		
		<!--FOOTER -->
		{% include '_partials/_footer.html.twig' %}
		
		<!--SCRIPTS -->
		{% block javascripts %}
			{# jQuery (nécessaire pour certaines fonctionnalités de Bootstrap) #}
			<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-vtXRMe3mGCbOeY7l30aIg8H9p3GdeSe4IFlP6G8JMa7o7lXvnz3GFKzPxzJdPfGK" crossorigin="anonymous"></script>
			
			{# Bootstrap 5.3 JS Bundle avec Popper #}
			<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" 
					crossorigin="anonymous"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" 
					crossorigin="anonymous"></script>
			
			{# Script js perso #}
			<script src="{{ asset('assets/js/script/modalshop.js', null, false, {version: 'v1'}) }}"></script>
			<script src="{{ asset('assets/js/script/numbers.js', null, false, {version: 'v1'}) }}"></script>
			
			{% include '_partials/_tauc.html.twig' %}

			{# Pour Typed.js #}
			<script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
			{% if words is defined and words is not empty %}
				<script>
					var words = {{ words|map(w => w.content)|json_encode|raw }};
				</script>
				<script src="{{ asset('assets/js/script/words.js', null, false, {version: 'v1'}) }}"></script>
			{% endif %}

			{# Google Analytics #}
			<script async src="https://www.google-analytics.com/analytics.js"></script>
			<script>
				window.ga=window.ga||function(){(ga.q=ga.q||[]).push(arguments)};ga.l=+new Date;
				ga('create', 'UA-XXXXX-Y', 'auto'); // Remplacez UA-XXXXX-Y par votre ID de suivi
				ga('send', 'pageview');
			</script>
		{% endblock %}
	</body>
</html>
